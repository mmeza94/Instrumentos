@using MyResource = Laboratorio.Messages;
@{
    ViewBag.Title = "Index";
    bool odd = true;
}
@if (Request.IsAuthenticated)
{
    <fieldset>
        <legend>@MyResource.ToolAssignation</legend>
        @using (Html.BeginForm("Index", "Assignment", FormMethod.Post))
        {
            <fieldset>
                <legend>Herramientas asignadas</legend>
                <label for="MachineCode">
                    Máquina:</label>
                @Html.DropDownList("MachineCode", ViewBag.Sli as List<SelectListItem>, new { onchange = "this.form.submit()" })
            <div class="ui-corner-left">
                <br />
                <label for="ToolKit">
                    ToolKit:
                </label>
                @Html.DropDownList("ToolKit", ViewBag.toolkits as List<SelectListItem>, new { onchange = "this.form.submit()" })
            </div>
                <table class="center">
                    <tr class="TableHeader">
                        <th>
                            C&oacute;digo
                        </th>
                        <th>
                            Tipo
                        </th>
                        <th>
                            Fecha de calibraci&oacute;n
                        </th>
                        <th>
                            Fecha de expiraci&oacute;n
                        </th>
                        <th>
                            Uso
                        </th>
                        <th>
                        </th>
                        <th>
                        </th>
                        @if (ViewBag.MachineCode == "EMBAL1" || ViewBag.MachineCode == "EMBAL2")
                        {
                            if (ViewBag.MachineCode == "EMBAL1")
                            {
                                <th>Compartir con Pintado Tina B</th>
                            }
                            else
                            {
                                <th>Compartir con Pintado Tina A</th>
                            }
                        }
                    </tr>
                    @if (ViewBag.NoRecords)
                    {
                        <tr class="noRecords">
                            <td colspan="5" class="gridRowOdd">@MyResource.NoRecords
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var tm in ViewBag.MachineTools)
                        {
                <tr class="@(odd ? "gridRowOdd" : "gridRowEven")">
                    <td>
                        @tm.Code
                </td>
                <td>
                    @tm.Type
                </td>
                <td class="centeredTD">
                    @tm.CalibrationDate.ToString("dd/MM/yy")
                </td>
                <td class="centeredTD">
                    @tm.ExpirationDate.ToString("dd/MM/yy")
                </td>
                @if (tm.Measure)
                {
                    <td class="centeredTD">
                        Medici&oacute;n
                    </td>
                }
                else
                {
                    <td class="centeredTD">
                        Control
                    </td>

                }
                <td>
                    <a href="@Url.Action("RemoveTool", "Assignment", new { toolCode = tm.Code, machineCode = ViewBag.MachineCode })">
                        <img alt="@MyResource.DownArrowImageAlt" src="@Url.Content("~/Content/images/downarrow.png")" />
                    </a>
                </td>
                @if (ViewBag.MachineCode == "EMBAL1" || ViewBag.MachineCode == "EMBAL2")
                {
                    if (string.IsNullOrEmpty(tm.Shared))
                    {
                        <td class="centeredTD">
                            No Compartido
                            <a href="@Url.Action("ShareTool", "Assignment", new { toolCode = tm.Code, machineCode = ViewBag.MachineCode, meassure = tm.Measure })">
                                <img alt="@MyResource.RightArrow" src="@Url.Content("~/Content/images/rightarrow2.png")" />
                            </a>
                        </td>
                    }
                    else
                    {
                        <td class="centeredTD">
                            Compartido
                            <a href="@Url.Action("ShareTool", "Assignment", new { toolCode = tm.Code, machineCode = ViewBag.MachineCode, meassure = tm.Measure })">
                                <img alt="@MyResource.RightArrow" src="@Url.Content("~/Content/images/rightarrow2.png")" />
                            </a>
                        </td>
                    }
                }
                <td>
                   
                    <a href="@Url.Action("UpdateToolPage", "Tool", new { code = tm.Code })">
                            <img alt="@MyResource.UpdateImageAlt" src="@Url.Content("~/Content/images/change.png")" />
                    </a>
                    
                </td>

                </tr>
        
                            odd = odd ? false : true;
                        }
                    }
                </table>
                @if (ViewBag.ValidationMessage != null)
                {
                    <label class="validationError">@ViewBag.ValidationMessage</label>
                }
            </fieldset>
            <br />
        }
        <fieldset>
            <legend>Herramientas disponibles</legend>
            <table class="center">
                <tr class="TableHeader">
                    <th>
                        C&oacute;digo
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>
                        Fecha de calibraci&oacute;n
                    </th>
                    <th>
                        Fecha de expiraci&oacute;n
                    </th>
                    <th>
                        Medición
                    </th>
                    <th>
                        Control
                    </th>
                    <th>

                    </th>
                </tr>
                @if (ViewBag.NoRecords2)
                {
                    <tr class="noRecords">
                        <td colspan="5" class="gridRowOdd">@MyResource.NoRecords
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var tm in ViewBag.AvailableTools)
                    {
            <tr class="@(odd ? "gridRowOdd" : "gridRowEven")">
                <td>
                    @tm.Code
            </td>
            <td>
                @tm.Type
            </td>
            <td class="centeredTD">
                @tm.CalibrationDate.ToString("dd/MM/yy")
            </td>
            <td class="centeredTD">
                @tm.ExpirationDate.ToString("dd/MM/yy")
            </td>
            <td class="centeredTD">
                <a href="@Url.Action("AddTool", "Assignment", new { toolCode = tm.Code, machineCode = ViewBag.MachineCode, use = 1 })">
                    <img alt="@MyResource.UpArrowMeasureImageAlt" src="@Url.Content("~/Content/images/uparrow.png")" />
                </a>
            </td>
            <td class="centeredTD">
                <a href="@Url.Action("AddTool", "Assignment", new { toolCode = tm.Code, machineCode = ViewBag.MachineCode, use = 0 })">
                    <img alt="@MyResource.UpArrowControlImageAlt" src="@Url.Content("~/Content/images/uparrow.png")" />
                </a>
            </td>
            <td>

                <a href="@Url.Action("UpdateToolPage", "Tool", new { code = tm.Code })">
                    <img alt="@MyResource.UpdateImageAlt" src="@Url.Content("~/Content/images/change.png")" />
                </a>

            </td>
            </tr>
        
                        odd = odd ? false : true;
                    }
                }
            </table>
        </fieldset>
    </fieldset>
}
else
{
    @Html.Partial("_LogInFormPartial")
}